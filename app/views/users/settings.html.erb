<div class="container">
    <p>
        Update Settings
    </p>
    <div>
        Choose the calendars you would like to show in your week:
        <%= form_for @user do |f| %> 
            <% @list_calendars.each do |cal, sum| %>
                <div class="form-check">
                    <%= f.check_box :cal_list, {:multiple => true}, cal, false %>
                    <%= f.label sum, "#{sum}" %>
                </div>
            <% end %>
            <%= f.submit :Update %>
        <% end %>
    </div>
</div>